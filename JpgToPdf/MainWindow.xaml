<Window x:Class="JpgToPdf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JpgToPdf"
        mc:Ignorable="d"
        Title="JpgToPdf" Height="250" Width="300">
    <Grid Margin="0,0,0,-16">
        <Button Name="btnLoadFromFile" Margin="64,10,74,180" Click="BtnLoadFromFile_Click">Load from File</Button>
        <TextBox x:Name="textBox1"  MaxLength="250" TextWrapping = "Wrap" Margin="10,75,10,100" FontFamily="Arial" FontSize="14"></TextBox>
        <Button x:Name="Convert" Content="Convert" Click="ConvertButton_Click" Margin="112,180,112,26" />
    </Grid>
</Window>
